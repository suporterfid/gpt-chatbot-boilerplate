{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Template Agent Configuration",
  "description": "Configuration schema for Template Agent. Customize this for your agent's needs.",
  "required": [],
  "properties": {
    "example_setting": {
      "type": "string",
      "description": "An example configuration setting",
      "default": "default_value",
      "minLength": 1,
      "maxLength": 255
    },
    "api_endpoint": {
      "type": "string",
      "format": "uri",
      "description": "API endpoint URL (e.g., https://api.example.com)",
      "examples": [
        "https://api.example.com/v1"
      ]
    },
    "api_key": {
      "type": "string",
      "description": "API authentication key. Supports environment variables using ${VAR_NAME} syntax.",
      "minLength": 10,
      "sensitive": true,
      "examples": [
        "${MY_API_KEY}",
        "sk-1234567890abcdef"
      ]
    },
    "api_timeout_ms": {
      "type": "integer",
      "description": "API request timeout in milliseconds",
      "default": 30000,
      "minimum": 1000,
      "maximum": 300000
    },
    "enable_feature_x": {
      "type": "boolean",
      "description": "Enable feature X",
      "default": false
    },
    "max_retries": {
      "type": "integer",
      "description": "Maximum number of retry attempts for failed operations",
      "default": 3,
      "minimum": 0,
      "maximum": 10
    },
    "options": {
      "type": "array",
      "description": "List of configuration options",
      "items": {
        "type": "string"
      },
      "default": [],
      "examples": [
        ["option1", "option2", "option3"]
      ]
    },
    "advanced_settings": {
      "type": "object",
      "description": "Advanced configuration settings",
      "properties": {
        "cache_enabled": {
          "type": "boolean",
          "description": "Enable caching",
          "default": true
        },
        "cache_ttl_seconds": {
          "type": "integer",
          "description": "Cache time-to-live in seconds",
          "default": 3600,
          "minimum": 60
        },
        "debug_mode": {
          "type": "boolean",
          "description": "Enable debug logging",
          "default": false
        }
      }
    }
  },
  "additionalProperties": false
}
